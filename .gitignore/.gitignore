Pessoa:

public class Pessoa {
	String nome;
	String sobrenome;
	int anodeNascimento;
	
	int calcularIdade(){
		return 2020-anodeNascimento;
	}
	String mostrarNomeCompleto(){
		return nome+" "+sobrenome;
	}

}
