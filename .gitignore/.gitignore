		primeiraPessoa.nome = "Rafael";
		primeiraPessoa.sobrenome = "Moraes";
		primeiraPessoa.anodeNascimento = 2004;
		
		System.out.println("Nome completo: "+ primeiraPessoa.mostrarNomeCompleto());
