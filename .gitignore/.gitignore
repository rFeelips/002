TRIANGULO:

public class Triangulo {
	double altura;
	double base;
	
	double calcularArea(double base, double altura){
		return base*altura/2;
		 
	}
}

RETANGULO:

public class Retangulo {
	double base;
	double altura;
	
	double calcularRetangulo(double base, double altura){
		return base*altura;
		 
	}

}
